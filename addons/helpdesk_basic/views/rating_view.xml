<?xml version="1.0" encoding="utf-8"?>
<flectra>

    <template id="assets_frontend_new" inherit_id="website_rating.assets_frontend" name="Website rating frontend assets">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/website_rating/static/src/js/website_mail.js"></script>
            <link type="text/css" rel='stylesheet' href='/website_rating/static/src/less/website_rating.scss'/>
        </xpath>
    </template>

    <template id="message_thread_new" inherit_id="website_rating.message_thread">
        <xpath expr="//div[@id='discussion']" position="attributes">
            <attribute name="t-att-data-display_rating">display_rating or False</attribute>
        </xpath>
    </template>

</flectra>
