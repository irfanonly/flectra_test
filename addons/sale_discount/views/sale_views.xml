<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">view.sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="note" position="before">
                    <label for="discount_type" string="Document Discount"/>
                    <div class="o_row">
                        <field name="discount_type"/>
                        <field name="discount_value" attrs="{'invisible': [('discount_type', '=', False)]}"/>
                    </div>
                </field>
                <field name="amount_untaxed" position="before">
                    <field name="amount_gross" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    <field name="document_discount" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                </field>
            </field>
        </record>
    </data>
</flectra>